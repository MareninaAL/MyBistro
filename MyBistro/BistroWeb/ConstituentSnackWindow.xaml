<Window x:Class="BistroWeb.ConstituentSnackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BistroWeb"
        mc:Ignorable="d"
        Title="ConstituentSnackWindow" Height="150" Width="270">
    <Grid>
        <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="80,80,0,0" VerticalAlignment="Top" Width="75" Click="buttonSave_Click"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="170,80,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click"/>
        <Label x:Name="labelConstituent" Content="Компонент" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelCount" Content="Количество" HorizontalAlignment="Left" Margin="20,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxCount" HorizontalAlignment="Left" Height="23" Margin="120,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="comboBoxConstituent" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
