<Window x:Class="BistroWeb.SnacksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BistroWeb"
        mc:Ignorable="d"
        Title="Изделия" Height="320" Width="400">
    <Grid Margin="0,0,2,0">
        <Button x:Name="buttonAdd" Content="Добавить" HorizontalAlignment="Left" Margin="300,30,0,0" VerticalAlignment="Top" Width="75" Click="buttonAdd_Click" />
        <Button x:Name="buttonRef" Content="Обновить" HorizontalAlignment="Left" Margin="300,60,0,0" VerticalAlignment="Top" Width="75" Click="buttonRef_Click" />
        <Button x:Name="buttonUpd" Content="Изменить" HorizontalAlignment="Left" Margin="300,90,0,0" VerticalAlignment="Top" Width="75" Click="buttonUpd_Click" />
        <Button x:Name="buttonDel" Content="Удалить" HorizontalAlignment="Left" Margin="300,120,0,0" VerticalAlignment="Top" Width="75" Click="buttonDel_Click" />
        <DataGrid x:Name="dataGridSnack" HorizontalAlignment="Left" Height="260" Margin="10,10,0,0" VerticalAlignment="Top" Width="280"/>

    </Grid>
</Window>
