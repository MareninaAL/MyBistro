<Window x:Class="BistroWeb.RefrigeratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BistroWeb"
        mc:Ignorable="d"
        Title="RefrigeratorWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="labelRefrigeratorName" Content="Название" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxRefrigeratorName" HorizontalAlignment="Left" Height="23" Margin="100,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="110,230,0,0" VerticalAlignment="Top" Width="75" Click="buttonSave_Click"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="200,230,-30,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click"/>
        <DataGrid x:Name="dataGridConstituents" HorizontalAlignment="Left" Height="175" Margin="22,40,0,0" VerticalAlignment="Top" Width="253"/>

    </Grid>
</Window>
